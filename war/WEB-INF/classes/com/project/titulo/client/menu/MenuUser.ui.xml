<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.gwt-Button {
		  display: inline;
		  width:16.66%;
		  height:50px;
		  cursor: pointer;
		  cursor: hand;
		  font-weight: bold;
		}
		.gwt-Button:active {
		  border: 1px inset #ccc;
		}
		/*
		.gwt-Button:hover {
		  border-color: #0062cc;
		}
		*/
		.gwt-Button[disabled] {
		  cursor: default;
		  color: #888;
		}
		/*
		.gwt-Button[disabled]:hover {
	

		}
		*/
		.flowPanel{
		  width: 100%;
			 
		}
	</ui:style>
	<g:HTMLPanel>
		<div align="center" style="padding-bottom:0.5cm;">
			<g:FlowPanel addStyleNames='{style.flowPanel}'>
				<g:Button ui:field="homeBTN"  text="Home" addStyleNames='{style.gwt-Button}'>Home</g:Button>
				<g:Button ui:field="filesBTN" text="Files" addStyleNames='{style.gwt-Button}'>Files</g:Button>
				<g:Button ui:field="plotBTN" text="Plot" addStyleNames='{style.gwt-Button}'>Plot</g:Button>
				<g:Button ui:field="metricBTN" text="Metrics" addStyleNames='{style.gwt-Button}'>Metrics</g:Button>
				<g:Button ui:field="communityBTN" text="Forum" addStyleNames='{style.gwt-Button}'>Forum</g:Button>
				<g:Button ui:field="faqBTN" text="FAQ" addStyleNames='{style.gwt-Button}'>FAQ</g:Button>
			</g:FlowPanel>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 